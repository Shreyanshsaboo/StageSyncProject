<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.MusicianSignupController"
          hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Musician Sign-Up" GridPane.columnSpan="2" style="-fx-font-size: 20;" />

    <Label text="Full Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Genre:" GridPane.rowIndex="4"/>
    <TextField fx:id="genreField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Instruments:" GridPane.rowIndex="5"/>
    <TextField fx:id="instrumentsField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Experience:" GridPane.rowIndex="6"/>
    <TextField fx:id="experienceField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Button text="Sign Up" onAction="#handleSignUp" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
    <Label fx:id="statusLabel" GridPane.rowIndex="8" GridPane.columnSpan="2" style="-fx-text-fill: red;"/>
</GridPane>
